{
  "name": "webos",
  "private": true,
  "version": "0.1.0-rc",
  "author": "webOS Community",
  "description": "A macOS Launchpad-inspired bookmark manager",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "build": "vite build",
    "build:electron": "BUILD_TARGET=electron vite build && electron-builder --publish never",
    "build:extension": "BUILD_TARGET=extension vite build && npm run extension:copy",
    "extension:copy": "node scripts/build-extension.js",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@vueuse/core": "^14.1.0",
    "pinia": "^3.0.4",
    "uuid": "^13.0.0",
    "vue": "^3.5.24",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@pinia/testing": "^0.1.3",
    "@resvg/resvg-js": "^2.6.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "@vue/test-utils": "^2.4.3",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "fs-extra": "^11.2.0",
    "jsdom": "^23.0.1",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "typescript": "^5.3.3",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vitest": "^1.1.0",
    "vue-tsc": "^2.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.webos.app",
    "productName": "webOS",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "${productName} ${version}",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "category": "Utility",
      "icon": "build/icon.png",
      "target": ["AppImage", "deb", "rpm"],
      "desktop": {
        "entry": {
          "Name": "webOS",
          "Comment": "macOS Launchpad-inspired bookmark manager",
          "Categories": "Utility;",
          "StartupWMClass": "webOS"
        }
      }
    }
  }
}
